# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=resumeai
DB_SSLMODE=disable

# Application Configuration
PORT=8081
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# GCP Configuration (for PDF generation)
# Instead of using a JSON file, use environment variables
GCP_PROJECT_ID=your_gcp_project_id
GCP_PRIVATE_KEY_ID=your_private_key_id
GCP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
GCP_CLIENT_EMAIL=your_service_account_email
GCP_CLIENT_ID=your_client_id
GCP_CLIENT_X509_CERT_URL=your_cert_url

# Google Cloud Configuration (for resume generation)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
